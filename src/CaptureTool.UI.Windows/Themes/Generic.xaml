<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <!--  Light theme  -->
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="RootBackgroundBrush" Color="{StaticResource LayerOnMicaBaseAltFillColorDefault}" />
            <StaticResource x:Key="ImageEditCanvasBackgroundBrush" ResourceKey="LayerOnMicaBaseAltFillColorDefault" />
        </ResourceDictionary>

        <!--  Dark theme  -->
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="RootBackgroundBrush" Color="{StaticResource LayerOnMicaBaseAltFillColorDefault}" />
            <StaticResource x:Key="ImageEditCanvasBackgroundBrush" ResourceKey="LayerOnMicaBaseAltFillColorDefault" />
        </ResourceDictionary>

        <!--  High contrast theme  -->
        <ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="RootBackgroundBrush" ResourceKey="ApplicationPageBackgroundThemeBrush" />
            <StaticResource x:Key="ImageEditCanvasBackgroundBrush" ResourceKey="ApplicationPageBackgroundThemeBrush" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <FontFamily x:Key="FluentSystemIcons">ms-appx:///Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular</FontFamily>

    <x:String x:Key="FlipHorizontal16Regular">&#xE62B;</x:String>
    <x:String x:Key="FlipHorizontal20Regular">&#xE62C;</x:String>
    <x:String x:Key="FlipHorizontal24Regular">&#xE62D;</x:String>
    <x:String x:Key="FlipHorizontal28Regular">&#xE62E;</x:String>
    <x:String x:Key="FlipHorizontal32Regular">&#xE62F;</x:String>
    <x:String x:Key="FlipHorizontal48Regular">&#xE630;</x:String>
    <x:String x:Key="FlipVertical16Regular">&#xE631;</x:String>
    <x:String x:Key="FlipVertical20Regular">&#xE632;</x:String>
    <x:String x:Key="FlipVertical24Regular">&#xE633;</x:String>
    <x:String x:Key="FlipVertical28Regular">&#xE634;</x:String>
    <x:String x:Key="FlipVertical32Regular">&#xE635;</x:String>
    <x:String x:Key="FlipVertical48Regular">&#xE636;</x:String>

    <x:String x:Key="Color16Regular">&#xE3BC;</x:String>

    <x:String x:Key="LocalLanguage16Regular">&#xF4F2;</x:String>
    <x:String x:Key="LocalLanguage20Regular">&#xF4F3;</x:String>
    <x:String x:Key="LocalLanguage24Regular">&#xF4F4;</x:String>
    <x:String x:Key="LocalLanguage28Regular">&#xF4F5;</x:String>

    <Symbol x:Key="NewImageCaptureSymbol">Camera</Symbol>
    <Symbol x:Key="NewVideoCaptureSymbol">Video</Symbol>
</ResourceDictionary>
