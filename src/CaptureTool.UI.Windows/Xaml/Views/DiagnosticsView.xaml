<?xml version="1.0" encoding="utf-8" ?>
<local:DiagnosticsViewBase
    x:Class="CaptureTool.UI.Windows.Xaml.Views.DiagnosticsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Windows.Xaml.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DiagnosticsViewModel}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <ToggleSwitch Header="Logging" IsOn="False" />
            <TextBlock Text="Log output folder:" />
            <HyperlinkButton>
                <TextBlock Text="c:\logs" />
            </HyperlinkButton>
            <Button>
                <TextBlock Text="Clear logs" />
            </Button>
        </StackPanel>
    </Grid>
</local:DiagnosticsViewBase>
