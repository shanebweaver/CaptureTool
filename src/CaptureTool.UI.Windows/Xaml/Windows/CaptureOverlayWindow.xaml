<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="CaptureTool.UI.Windows.Xaml.Windows.CaptureOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CaptureTool.UI.Windows.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Windows.Xaml.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid x:Name="RootPanel">
        <controls:SelectionOverlay SelectionComplete="SelectionOverlay_SelectionComplete" />

        <Grid
            x:Name="ToolbarPanel"
            Margin="0,12,0,0"
            Padding="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
            CornerRadius="4"
            Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <!--  Capture type  -->
                <toolkit:Segmented SelectionMode="Single" Visibility="{x:Bind ViewModel.IsVideoCaptureEnabled}">
                    <toolkit:SegmentedItem Icon="Camera" IsSelected="True" />
                    <toolkit:SegmentedItem Icon="Video" />
                </toolkit:Segmented>

                <!--  Capture mode  -->
                <DropDownButton Background="Transparent" BorderThickness="0">
                    <SymbolIcon Symbol="Preview" />
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Icon="Preview" Text="Rectangle" />
                            <MenuFlyoutItem
                                Icon="Preview"
                                Text="Window"
                                Visibility="{x:Bind ViewModel.IsWindowModeEnabled}" />
                            <MenuFlyoutItem
                                Icon="Preview"
                                Text="Full screen"
                                Visibility="{x:Bind ViewModel.IsFullScreenModeEnabled}" />
                            <MenuFlyoutItem
                                Icon="Preview"
                                Text="Freeform"
                                Visibility="{x:Bind ViewModel.IsFreeformModeEnabled}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <!--  Close  -->
                <Button
                    x:Name="CloseButton"
                    x:Uid="SelectionOverlay_CloseButton"
                    Width="32"
                    Height="32"
                    Padding="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="CloseButton_Click">
                    <SymbolIcon Symbol="Clear" />
                </Button>
            </StackPanel>
        </Grid>

        <!--  Secret button to allow escape to work on all monitors.  -->
        <Button
            Click="CloseButton_Click"
            IsTabStop="False"
            Opacity="0">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Escape" />
            </Button.KeyboardAccelerators>
        </Button>
    </Grid>

</Window>
