<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="CaptureTool.UI.Windows.Xaml.Windows.CaptureOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CaptureTool.UI.Windows.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Windows.Xaml.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid x:Name="RootPanel">
        <controls:SelectionOverlay SelectionComplete="SelectionOverlay_SelectionComplete" />

        <controls:CaptureOverlayToolbar
            x:Name="Toolbar"
            CloseRequested="OnCloseRequested"
            SelectedCaptureMode="{x:Bind ViewModel.SelectedCaptureMode, Mode=TwoWay}" />

        <!--  Secret button to allow escape to work on all monitors.  -->
        <Button
            Click="OnCloseRequested"
            IsTabStop="False"
            Opacity="0">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Escape" />
            </Button.KeyboardAccelerators>
        </Button>
    </Grid>

</Window>
