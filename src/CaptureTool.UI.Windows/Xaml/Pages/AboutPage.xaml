<?xml version="1.0" encoding="utf-8" ?>
<local:AboutPageBase
    x:Class="CaptureTool.UI.Windows.Xaml.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Windows.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AboutPageViewModel}"
    mc:Ignorable="d">

    <ScrollView>
        <StackPanel Padding="0,24" Spacing="24">
            <StackPanel
                Margin="12,0"
                Orientation="Horizontal"
                Spacing="12">
                <Button
                    Width="32"
                    Height="32"
                    Padding="0"
                    VerticalAlignment="Center"
                    AutomationProperties.Name="Back"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind ViewModel.GoBackCommand}">
                    <SymbolIcon Symbol="Back" />
                </Button>
                <TextBlock
                    x:Uid="About_TitleLabel"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    TextWrapping="WrapWholeWords" />
            </StackPanel>

            <StackPanel
                x:Name="ContentPanel"
                Margin="54,0"
                HorizontalAlignment="Stretch"
                Spacing="12">

                <StackPanel Spacing="4">
                    <TextBlock TextWrapping="WrapWholeWords">
                        <Run Text="{x:Bind AppName}" />
                        <Run Text="{x:Bind AppVersion}" />
                    </TextBlock>
                    <TextBlock x:Uid="About_Copyright" TextWrapping="WrapWholeWords" />
                </StackPanel>

                <StackPanel Spacing="4">
                    <HyperlinkButton Command="{x:Bind ViewModel.ShowDisclaimerOfLiabilityCommand}">
                        <TextBlock x:Uid="About_DisclaimerOfLiability_ButtonLabel" TextWrapping="WrapWholeWords" />
                    </HyperlinkButton>

                    <HyperlinkButton Command="{x:Bind ViewModel.ShowTermsOfUseCommand}">
                        <TextBlock x:Uid="About_TermsOfUse_ButtonLabel" TextWrapping="WrapWholeWords" />
                    </HyperlinkButton>

                    <HyperlinkButton Command="{x:Bind ViewModel.ShowPrivacyPolicyCommand}">
                        <TextBlock x:Uid="About_PrivacyPolicy_ButtonLabel" TextWrapping="WrapWholeWords" />
                    </HyperlinkButton>

                    <HyperlinkButton Command="{x:Bind ViewModel.ShowThirdPartyCommand}">
                        <TextBlock x:Uid="About_ThirdParty_ButtonLabel" TextWrapping="WrapWholeWords" />
                    </HyperlinkButton>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Default">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="908" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentPanel.HorizontalAlignment" Value="Left" />
                        <Setter Target="ContentPanel.MinWidth" Value="800" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </ScrollView>
</local:AboutPageBase>
