<?xml version="1.0" encoding="utf-8" ?>
<local:VideoEditPageBase
    x:Class="CaptureTool.UI.Windows.Xaml.Pages.VideoEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Windows.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:VideoEditPageViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <CommandBar DefaultLabelPosition="Right" IsOpen="False">
            <!--  Copy  -->
            <AppBarButton
                x:Uid="VideoEdit_CopyButton"
                Command="{x:Bind ViewModel.CopyCommand}"
                Icon="Copy">
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="C" Modifiers="Control" />
                </AppBarButton.KeyboardAccelerators>
            </AppBarButton>

            <!--  Save  -->
            <AppBarButton
                x:Uid="VideoEdit_SaveButton"
                Command="{x:Bind ViewModel.SaveCommand}"
                Icon="Save">
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="S" Modifiers="Control" />
                </AppBarButton.KeyboardAccelerators>
            </AppBarButton>
        </CommandBar>

        <!--  Content  -->
        <Grid Grid.Row="1">
            <MediaPlayerElement x:Name="VideoPlayer" AreTransportControlsEnabled="True" />
        </Grid>
    </Grid>
</local:VideoEditPageBase>
