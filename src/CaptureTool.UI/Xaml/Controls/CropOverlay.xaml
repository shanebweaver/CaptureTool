<?xml version="1.0" encoding="utf-8" ?>
<controls:UserControlBase
    x:Class="CaptureTool.UI.Xaml.Controls.CropOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CaptureTool.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Canvas x:Name="CropCanvas">
        <Grid
            x:Name="CropBoundary"
            Background="Transparent"
            BorderThickness="0"
            IsTabStop="True">
            <Grid.BorderBrush>
                <SolidColorBrush Opacity=".5" Color="Black" />
            </Grid.BorderBrush>
            <!--  Border  -->
            <Rectangle
                Margin="-3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Stroke="White"
                StrokeThickness="1" />

            <!--  Crop anchors  -->
            <!--  Top left  -->
            <Polygon
                x:Name="CropAnchor_TopLeft"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="White"
                IsTabStop="True"
                Points="0,0 40,0 40,8, 8,8 8,40, 0,40"
                Stroke="Black"
                UseSystemFocusVisuals="True">
                <Polygon.RenderTransform>
                    <TranslateTransform X="-9" Y="-9" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Top right  -->
            <Polygon
                x:Name="CropAnchor_TopRight"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Fill="White"
                Points="0,0 40,0 40,40 32,40 32,8 0,8"
                Stroke="Black">
                <Polygon.RenderTransform>
                    <TranslateTransform X="10" Y="-9" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Bottom left  -->
            <Polygon
                x:Name="CropAnchor_BottomLeft"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Fill="White"
                Points="0,0 8,0 8,32 40,32 40,40 0,40"
                Stroke="Black">
                <Polygon.RenderTransform>
                    <TranslateTransform X="-9" Y="9" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Bottom right  -->
            <Polygon
                x:Name="CropAnchor_BottomRight"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Fill="White"
                Points="32,0 40,0 40,40 0,40 0,32 32,32"
                Stroke="Black">
                <Polygon.RenderTransform>
                    <TranslateTransform X="10" Y="10" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Top  -->
            <Polygon
                x:Name="CropAnchor_Top"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="White"
                IsTabStop="True"
                Points="0,0 40,0 40,8 0,8"
                Stroke="Black"
                UseSystemFocusVisuals="True">
                <Polygon.RenderTransform>
                    <TranslateTransform Y="-9" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Left  -->
            <Polygon
                x:Name="CropAnchor_Left"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Fill="White"
                Points="0,0 8,0 8,40 0,40"
                Stroke="Black">
                <Polygon.RenderTransform>
                    <TranslateTransform X="-9" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Right  -->
            <Polygon
                x:Name="CropAnchor_Right"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Fill="White"
                Points="32,0 40,0 40,40 32,40"
                Stroke="Black">
                <Polygon.RenderTransform>
                    <TranslateTransform X="10" />
                </Polygon.RenderTransform>
            </Polygon>
            <!--  Bottom  -->
            <Polygon
                x:Name="CropAnchor_Bottom"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Fill="White"
                Points="0,32 40,32 40,40 0,40"
                Stroke="Black">
                <Polygon.RenderTransform>
                    <TranslateTransform Y="10" />
                </Polygon.RenderTransform>
            </Polygon>
        </Grid>
    </Canvas>
</controls:UserControlBase>
