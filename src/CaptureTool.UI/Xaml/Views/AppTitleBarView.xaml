<?xml version="1.0" encoding="utf-8" ?>
<local:AppTitleBarViewBase
    x:Class="CaptureTool.UI.Xaml.Views.AppTitleBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AppTitleBarViewModel}"
    mc:Ignorable="d">

    <TitleBar
        Title="{x:Bind ViewModel.Title}"
        BackRequested="TitleBar_BackRequested"
        IsBackButtonVisible="{x:Bind ViewModel.CanGoBack, Mode=OneWay}"
        IsTabStop="False">
        <!--  https://github.com/microsoft/microsoft-ui-xaml/issues/10374  -->
        <!--<TitleBar.IconSource>
            <ImageIconSource ImageSource="{x:Bind ViewModel.Icon}" />
        </TitleBar.IconSource>-->
    </TitleBar>

</local:AppTitleBarViewBase>
