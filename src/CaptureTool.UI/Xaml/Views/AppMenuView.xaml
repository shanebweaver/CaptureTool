<?xml version="1.0" encoding="utf-8" ?>
<local:AppMenuViewBase
    x:Class="CaptureTool.UI.Xaml.Views.AppMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AppMenuViewModel}"
    Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}"
    mc:Ignorable="d">

    <MenuBar>
        <!--  File  -->
        <MenuBarItem Title="File">
            <!--  New capture  -->
            <MenuFlyoutSubItem Icon="Add" Text="New capture">
                <MenuFlyoutItem
                    Command="{x:Bind ViewModel.NewDesktopCaptureCommand}"
                    Icon="NewWindow"
                    Text="Desktop" />
                <MenuFlyoutItem
                    Command="{x:Bind ViewModel.NewCameraCaptureCommand}"
                    Icon="Camera"
                    Text="Camera" />
                <MenuFlyoutItem
                    Command="{x:Bind ViewModel.NewAudioCaptureCommand}"
                    Icon="Microphone"
                    Text="Audio" />
            </MenuFlyoutSubItem>

            <!--  Open  -->
            <MenuFlyoutItem
                Command="{x:Bind ViewModel.OpenFileCommand}"
                Icon="Folder"
                Text="Open...">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="O" Modifiers="Control" />
                </MenuFlyoutItem.KeyboardAccelerators>
            </MenuFlyoutItem>
            <MenuFlyoutSeparator />

            <!--  Settings  -->
            <MenuFlyoutItem
                Command="{x:Bind ViewModel.NavigateToSettingsCommand}"
                Icon="Setting"
                Text="Settings" />

            <!--  Exit  -->
            <MenuFlyoutItem Command="{x:Bind ViewModel.ExitApplicationCommand}" Text="Exit">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="F4" Modifiers="Menu" />
                </MenuFlyoutItem.KeyboardAccelerators>
            </MenuFlyoutItem>
        </MenuBarItem>

        <!--  Help  -->
        <MenuBarItem Title="Help">
            <!--  About  -->
            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowAboutDialogCommand}" Text="About" />
        </MenuBarItem>
    </MenuBar>
</local:AppMenuViewBase>
