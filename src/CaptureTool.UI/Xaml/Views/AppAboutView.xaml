<?xml version="1.0" encoding="utf-8" ?>
<local:AppAboutViewBase
    x:Class="CaptureTool.UI.Xaml.Views.AppAboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AppAboutViewModel}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="4">
            <TextBlock>
                <Run Text="Author:" />
                <Run Text="Shane Weaver" />
            </TextBlock>
            <TextBlock>
                <Run Text="Year:" />
                <Run Text="2025" />
            </TextBlock>
        </StackPanel>
    </Grid>
</local:AppAboutViewBase>
