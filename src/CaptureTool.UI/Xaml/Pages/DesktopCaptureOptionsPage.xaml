<?xml version="1.0" encoding="utf-8" ?>
<local:DesktopCaptureOptionsPageBase
    x:Class="CaptureTool.UI.Xaml.Pages.DesktopCaptureOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DesktopCaptureOptionsPageViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Button
            x:Name="NewDesktopCaptureButton"
            Width="96"
            Height="96"
            Command="{x:Bind ViewModel.NewDesktopCaptureCommand}"
            CornerRadius="12">
            <StackPanel>
                <SymbolIcon Symbol="NewWindow" />
                <TextBlock Text="Desktop" />
            </StackPanel>
        </Button>
    </Grid>
</local:DesktopCaptureOptionsPageBase>
