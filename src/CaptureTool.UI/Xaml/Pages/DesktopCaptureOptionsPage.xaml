<?xml version="1.0" encoding="utf-8" ?>
<local:DesktopCaptureOptionsPageBase
    x:Class="CaptureTool.UI.Xaml.Pages.DesktopCaptureOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:CaptureTool.UI.Xaml.UserControls"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DesktopCaptureOptionsPageViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid HorizontalAlignment="Center" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <usercontrols:NewCaptureButton
                x:Name="NewDesktopCaptureButton"
                x:Uid="NewCaptureButton_Desktop"
                Command="{x:Bind ViewModel.NewDesktopCaptureCommand}"
                Symbol="{StaticResource NewDesktopCaptureSymbol}" />

            <Grid
                VerticalAlignment="Center"
                Column="1"
                ColumnSpacing="8"
                RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="124" />
                    <ColumnDefinition Width="124" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ComboBox
                    HorizontalAlignment="Stretch"
                    ItemsSource="{x:Bind ViewModel.DesktopCaptureModes, Mode=OneWay}"
                    SelectedIndex="{x:Bind ViewModel.SelectedDesktopCaptureModeIndex, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:DesktopCaptureModeViewModel">
                            <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Grid Grid.Column="1">
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        ItemsSource="{x:Bind ViewModel.ImageCaptureModes, Mode=OneWay}"
                        SelectedIndex="{x:Bind ViewModel.SelectedImageCaptureModeIndex, Mode=TwoWay}" />
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        ItemsSource="{x:Bind ViewModel.VideoCaptureModes, Mode=OneWay}"
                        SelectedIndex="{x:Bind ViewModel.SelectedVideoCaptureModeIndex, Mode=TwoWay}"
                        Visibility="Collapsed" />
                </Grid>

                <CheckBox
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    IsChecked="{x:Bind ViewModel.AutoSave, Mode=TwoWay}">
                    <TextBlock Text="Autosave?" />
                </CheckBox>
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="0">
                    <ComboBoxItem>
                        <TextBlock Text="PNG" />
                    </ComboBoxItem>
                </ComboBox>
            </Grid>
        </Grid>
    </Grid>
</local:DesktopCaptureOptionsPageBase>
