<?xml version="1.0" encoding="utf-8" ?>
<local:DesktopCaptureOptionsPageBase
    x:Class="CaptureTool.UI.Xaml.Pages.DesktopCaptureOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:CaptureTool.UI.Xaml.UserControls"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DesktopCaptureOptionsPageViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <usercontrols:NewCaptureButton
            x:Name="NewDesktopCaptureButton"
            x:Uid="NewCaptureButton_Desktop"
            Command="{x:Bind ViewModel.NewDesktopCaptureCommand}"
            Symbol="{StaticResource NewDesktopCaptureSymbol}" />
    </Grid>
</local:DesktopCaptureOptionsPageBase>
