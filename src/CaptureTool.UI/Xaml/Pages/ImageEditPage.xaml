<?xml version="1.0" encoding="utf-8" ?>
<local:ImageEditPageBase
    x:Class="CaptureTool.UI.Xaml.Pages.ImageEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CaptureTool.UI.Xaml.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imagecanvas="using:CaptureTool.UI.Xaml.Controls.ImageCanvas"
    xmlns:local="using:CaptureTool.UI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    xmlns:views="using:CaptureTool.UI.Xaml.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:ImageEditPageViewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:AnnotationItemConverter x:Key="AnnotationItemConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right" IsOpen="False">
            <AppBarButton
                Command="{x:Bind ViewModel.CropCommand}"
                Icon="Crop"
                IsEnabled="False"
                Label="Crop" />
            <AppBarButton
                Command="{x:Bind ViewModel.CopyCommand}"
                Icon="Copy"
                IsEnabled="False"
                Label="Copy" />
            <AppBarButton
                Command="{x:Bind ViewModel.SaveCommand}"
                Icon="Save"
                IsEnabled="False"
                Label="Save" />
        </CommandBar>

        <Grid
            x:Name="CanvasContainer"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}"
            Row="1">
            <imagecanvas:ImageCanvas
                x:Name="ImageCanvas"
                ImageSource="{x:Bind ViewModel.ImageFile.Path, Mode=OneWay}"
                ItemsSource="{x:Bind ViewModel.CanvasItems, Mode=OneWay, Converter={StaticResource AnnotationItemConverter}}" />
        </Grid>
    </Grid>
</local:ImageEditPageBase>
