<?xml version="1.0" encoding="utf-8" ?>
<local:DesktopVideoCaptureOptionsPageBase
    x:Class="CaptureTool.UI.Xaml.Pages.DesktopVideoCaptureOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CaptureTool.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.UI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DesktopVideoCaptureOptionsPageViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid HorizontalAlignment="Center" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:NewCaptureButton
                x:Name="NewDesktopVideoCaptureButton"
                x:Uid="NewCaptureButton_DesktopVideo"
                Command="{x:Bind ViewModel.NewDesktopVideoCaptureCommand}"
                Symbol="{StaticResource NewDesktopVideoCaptureSymbol}" />

            <Grid
                VerticalAlignment="Center"
                Column="1"
                ColumnSpacing="8"
                RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ComboBox
                    HorizontalAlignment="Stretch"
                    ItemsSource="{x:Bind ViewModel.CaptureModes, Mode=OneWay}"
                    SelectedIndex="{x:Bind ViewModel.SelectedCaptureModeIndex, Mode=TwoWay}" />

                <CheckBox
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    IsChecked="{x:Bind ViewModel.AutoSave, Mode=TwoWay}">
                    <TextBlock x:Uid="NewCaptureOptions_AutoSaveCheckBoxLabel" />
                </CheckBox>
            </Grid>
        </Grid>
    </Grid>
</local:DesktopVideoCaptureOptionsPageBase>
