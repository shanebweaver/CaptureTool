<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <!--  Light theme  -->
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="TextForegroundBrush" Color="{StaticResource TextFillColorPrimary}" />
        </ResourceDictionary>

        <!--  Dark theme  -->
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="TextForegroundBrush" Color="{StaticResource TextFillColorPrimary}" />
        </ResourceDictionary>

        <!--  High contrast theme  -->
        <ResourceDictionary x:Key="HighContrast">
            <SolidColorBrush x:Key="TextForegroundBrush" Color="{StaticResource SystemColorWindowTextColor}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <FontFamily x:Key="FluentSystemIcons">/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular</FontFamily>

    <x:String x:Key="FlipHorizontal16Regular">&#xE62B;</x:String>
    <x:String x:Key="FlipHorizontal20Regular">&#xE62C;</x:String>
    <x:String x:Key="FlipHorizontal24Regular">&#xE62D;</x:String>
    <x:String x:Key="FlipHorizontal28Regular">&#xE62E;</x:String>
    <x:String x:Key="FlipHorizontal32Regular">&#xE62F;</x:String>
    <x:String x:Key="FlipHorizontal48Regular">&#xE630;</x:String>
    <x:String x:Key="FlipVertical16Regular">&#xE631;</x:String>
    <x:String x:Key="FlipVertical20Regular">&#xE632;</x:String>
    <x:String x:Key="FlipVertical24Regular">&#xE633;</x:String>
    <x:String x:Key="FlipVertical28Regular">&#xE634;</x:String>
    <x:String x:Key="FlipVertical32Regular">&#xE635;</x:String>
    <x:String x:Key="FlipVertical48Regular">&#xE636;</x:String>

    <Symbol x:Key="NewDesktopCaptureSymbol">NewWindow</Symbol>
    <Symbol x:Key="NewAudioCaptureSymbol">Microphone</Symbol>
    <Symbol x:Key="NewCameraCaptureSymbol">Camera</Symbol>

</ResourceDictionary>
