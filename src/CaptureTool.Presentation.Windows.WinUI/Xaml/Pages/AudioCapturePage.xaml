<?xml version="1.0" encoding="utf-8" ?>
<local:AudioCapturePageBase
    x:Class="CaptureTool.Presentation.Windows.WinUI.Xaml.Pages.AudioCapturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:CaptureTool.Presentation.Windows.WinUI.Helpers"
    xmlns:local="using:CaptureTool.Presentation.Windows.WinUI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.Application.Interfaces.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:IAudioCapturePageViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <CommandBar DefaultLabelPosition="Right" IsOpen="False">
            <!--  Play  -->
            <AppBarButton
                x:Uid="AudioCapture_PlayButton"
                Command="{x:Bind helpers:XamlCommandHelpers.ToICommand(ViewModel.PlayCommand)}"
                Icon="Play"
                IsEnabled="{x:Bind ViewModel.CanPlay, Mode=OneWay}"
                Label="Play" />

            <!--  Pause  -->
            <AppBarButton
                x:Uid="AudioCapture_PauseButton"
                Command="{x:Bind helpers:XamlCommandHelpers.ToICommand(ViewModel.PauseCommand)}"
                Icon="Pause"
                IsEnabled="{x:Bind ViewModel.IsPlaying, Mode=OneWay}"
                Label="Pause" />

            <!--  Stop  -->
            <AppBarButton
                x:Uid="AudioCapture_StopButton"
                Command="{x:Bind helpers:XamlCommandHelpers.ToICommand(ViewModel.StopCommand)}"
                Icon="Stop"
                IsEnabled="{x:Bind ViewModel.IsPlaying, Mode=OneWay}"
                Label="Stop" />

            <AppBarSeparator />

            <!--  Mute  -->
            <AppBarToggleButton
                x:Uid="AudioCapture_MuteButton"
                Command="{x:Bind helpers:XamlCommandHelpers.ToICommand(ViewModel.MuteCommand)}"
                Icon="Volume"
                IsChecked="{x:Bind ViewModel.IsMuted, Mode=OneWay}"
                Label="Mute" />

            <!--  Desktop Audio  -->
            <AppBarToggleButton
                x:Uid="AudioCapture_DesktopAudioButton"
                Command="{x:Bind helpers:XamlCommandHelpers.ToICommand(ViewModel.ToggleDesktopAudioCommand)}"
                Icon="Audio"
                IsChecked="{x:Bind ViewModel.IsDesktopAudioEnabled, Mode=OneWay}"
                Label="Desktop Audio" />
        </CommandBar>

        <!--  Content  -->
        <Grid Grid.Row="1" Padding="8">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Audio capture controls are ready. Use the buttons above to control audio capture." />
        </Grid>
    </Grid>

</local:AudioCapturePageBase>
