<?xml version="1.0" encoding="utf-8" ?>
<local:VideoEditPageBase
    x:Class="CaptureTool.Presentation.Windows.WinUI.Xaml.Pages.VideoEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CaptureTool.Presentation.Windows.WinUI.Xaml.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:VideoEditPageViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <CommandBar DefaultLabelPosition="Right" IsOpen="False">
            <!--  Copy  -->
            <AppBarButton
                x:Uid="VideoEdit_CopyButton"
                Command="{x:Bind ViewModel.CopyCommand}"
                Icon="Copy"
                IsEnabled="{x:Bind ViewModel.IsVideoReady, Mode=OneWay}">
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="C" Modifiers="Control" />
                </AppBarButton.KeyboardAccelerators>
            </AppBarButton>

            <!--  Save  -->
            <AppBarButton
                x:Uid="VideoEdit_SaveButton"
                Command="{x:Bind ViewModel.SaveCommand}"
                Icon="Save"
                IsEnabled="{x:Bind ViewModel.IsVideoReady, Mode=OneWay}">
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="S" Modifiers="Control" />
                </AppBarButton.KeyboardAccelerators>
            </AppBarButton>
        </CommandBar>

        <!--  Content  -->
        <Grid Grid.Row="1" Padding="8,0,8,8">
            <MediaPlayerElement
                x:Name="VideoPlayer"
                AreTransportControlsEnabled="True"
                Visibility="{x:Bind ViewModel.IsVideoReady, Mode=OneWay}" />

            <!--  Loading indicator for video finalization  -->
            <Grid Visibility="{x:Bind ViewModel.IsFinalizingVideo, Mode=OneWay}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
                    <ProgressRing
                        Width="48"
                        Height="48"
                        IsActive="True" />
                    <TextBlock
                        x:Uid="VideoEdit_FinalizingText"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Opacity="0.7"
                        Text="Finalizing video..." />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</local:VideoEditPageBase>
