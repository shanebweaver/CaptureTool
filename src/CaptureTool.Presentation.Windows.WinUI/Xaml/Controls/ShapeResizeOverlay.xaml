<?xml version="1.0" encoding="utf-8" ?>
<controls:UserControlBase
    x:Class="CaptureTool.Presentation.Windows.WinUI.Xaml.Controls.ShapeResizeOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CaptureTool.Presentation.Windows.WinUI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=controls:ShapeResizeOverlay}"
    mc:Ignorable="d">
    <Canvas x:Name="RootCanvas">
        <Grid
            x:Name="Boundary"
            Background="Transparent"
            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
            BorderThickness="2">

            <!--  Selection Border  -->
            <Rectangle
                Margin="-2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                StrokeDashArray="4,4"
                StrokeThickness="1" />

            <!--  Move Handle (interior area for dragging entire shape)  -->
            <Grid
                x:Name="MoveHandle"
                Margin="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent" />

            <!--  Resize Handles  -->
            <!--  Top left  -->
            <Ellipse
                x:Name="Handle_TopLeft"
                Width="12"
                Height="12"
                Margin="-6,-6,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Top right  -->
            <Ellipse
                x:Name="Handle_TopRight"
                Width="12"
                Height="12"
                Margin="0,-6,-6,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Bottom left  -->
            <Ellipse
                x:Name="Handle_BottomLeft"
                Width="12"
                Height="12"
                Margin="-6,0,0,-6"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Bottom right  -->
            <Ellipse
                x:Name="Handle_BottomRight"
                Width="12"
                Height="12"
                Margin="0,0,-6,-6"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Top center  -->
            <Ellipse
                x:Name="Handle_Top"
                Width="12"
                Height="12"
                Margin="0,-6,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Bottom center  -->
            <Ellipse
                x:Name="Handle_Bottom"
                Width="12"
                Height="12"
                Margin="0,0,0,-6"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Left center  -->
            <Ellipse
                x:Name="Handle_Left"
                Width="12"
                Height="12"
                Margin="-6,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />

            <!--  Right center  -->
            <Ellipse
                x:Name="Handle_Right"
                Width="12"
                Height="12"
                Margin="0,0,-6,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Fill="{ThemeResource AccentFillColorDefaultBrush}"
                Stroke="White"
                StrokeThickness="2" />
        </Grid>
    </Canvas>
</controls:UserControlBase>
