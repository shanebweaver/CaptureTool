<?xml version="1.0" encoding="utf-8" ?>
<local:DiagnosticsViewBase
    x:Class="CaptureTool.Presentation.Windows.WinUI.Xaml.Views.DiagnosticsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:CaptureTool.Presentation.Windows.WinUI.Helpers"
    xmlns:local="using:CaptureTool.Presentation.Windows.WinUI.Xaml.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CaptureTool.Application.Interfaces.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:IDiagnosticsViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>
            <ToggleSwitch
                Header="Logging"
                IsOn="{x:Bind ViewModel.IsLoggingEnabled, Mode=OneWay}"
                Toggled="ToggleSwitch_Toggled" />
            <Button Command="{x:Bind helpers:XamlCommandHelpers.ToICommand(ViewModel.ClearLogsCommand)}">
                <TextBlock Text="Clear logs" />
            </Button>
        </StackPanel>

        <ScrollView Grid.Row="1">
            <TextBlock
                IsTextSelectionEnabled="True"
                Text="{x:Bind ViewModel.Logs, Mode=OneWay}"
                TextWrapping="WrapWholeWords" />
        </ScrollView>
    </Grid>
</local:DiagnosticsViewBase>
